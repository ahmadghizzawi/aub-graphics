BASE = asst6

all: $(BASE)

OS := $(shell uname -s)

ifeq ($(OS), Linux)
  CPPFLAGS = -I/opt/glew/include
  LDFLAGS += -L/opt/glew/lib -L/usr/X11R6/lib
  LIBS += -lGL -lGLU -lglut -lGLEW
endif

ifeq ($(OS), Darwin) # Assume OS X
  CPPFLAGS += -D__MAC__ -stdlib=libc++
  LDFLAGS += -framework GLUT -framework OpenGL
endif

ifdef OPT
  #turn on optimization
  CXXFLAGS += -O2
else
  #turn on debugging
  CXXFLAGS += -g
endif

CXX = g++ -Wno-deprecated-declarations -Wno-invalid-offsetof

OBJ = $(BASE).o ppm.o glsupport.o scenegraph.o picker.o geometry.o material.o renderstates.o texture.o

$(BASE): $(OBJ)
	$(LINK.cpp) -o $@ $^ $(LIBS)

clean:
	rm -f $(OBJ) $(BASE)
